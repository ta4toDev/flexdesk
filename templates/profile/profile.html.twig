{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_profile_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="alert alert-info text-center">
                        <h2>{{ 'edit_profile_header'|trans }}</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            {% if user.photo %}
                                <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="{{ 'profile_picture'|trans }}" class="rounded-circle border border-primary" style="width: 150px; height: 150px; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('uploads/photos/default-profile.png') }}" alt="{{ 'profile_picture'|trans }}" class="rounded-circle border border-secondary" style="width: 150px; height: 150px; object-fit: cover;">
                            {% endif %}
                        </div>

                        <!-- Form -->
                        {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.firstName, 'first_name'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.firstName, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.firstName) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.lastName, 'last_name'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.lastName, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.email, 'email'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.phoneNumber, 'phone_number'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.phoneNumber, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.phoneNumber) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.position, 'position'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.position, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.position) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.photo, 'upload_profile_picture'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.photo, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.photo) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.password.first, 'new_password'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.password.first, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.password.first) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.password.second, 'confirm_password'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.password.second, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.password.second) }}
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
