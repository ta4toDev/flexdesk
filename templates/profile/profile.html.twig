{% extends 'base.html.twig' %}

{% block title %}Profil bearbeiten{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Flash-Nachrichten -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="alert alert-info text-center">
                        <h2>Profil bearbeiten</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <!-- Profilbild anzeigen -->
                            {% if user.foto %}
                                <img src="{{ asset('uploads/photos/' ~ user.foto) }}" alt="Profilbild" class="rounded-circle border border-primary" style="width: 150px; height: 150px; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('uploads/photos/default-profile.png') }}" alt="Profilbild" class="rounded-circle border border-secondary" style="width: 150px; height: 150px; object-fit: cover;">
                            {% endif %}
                        </div>

                        <!-- Formular -->
                        {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.vorname, 'Vorname', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.vorname, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.vorname) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.name, 'Nachname', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.email, 'E-Mail', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.telefonnummer, 'Telefonnummer', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.telefonnummer, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.telefonnummer) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.position, 'Position', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.position, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.position) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.foto, 'Profilbild hochladen', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.foto, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.foto) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.password.first, 'Neues Passwort', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.password.first, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.password.first) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.password.second, 'Passwort best√§tigen', { 'label_attr': { 'class': 'form-label' } }) }}
                                {{ form_widget(form.password.second, { 'attr': { 'class': 'form-control' } }) }}
                                {{ form_errors(form.password.second) }}
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Speichern</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
