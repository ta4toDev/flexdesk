{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg">
                    <div class="alert alert-info text-center">
                        <h2>Dashboard</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="me-3">
                                    <h1>Welcome, {{ app.user.firstName }}!</h1>
                                    <p>Manage your office and home office days and reserve your workspace.</p>
                                </div>
                                <div>
                                    <img src="{{ app.user.photo ? asset('uploads/photos/' ~ app.user.photo) : asset('uploads/photos/default-profile.png') }}"
                                         alt="Profile Picture"
                                         class="rounded-circle border border-primary"
                                         style="width: 100px; height: 100px; object-fit: cover;">
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-info text-center">
                            <h4>Count of bookings this month: {{ CountOfBookingsThisMonth }}</h4>
                        </div>
                        <div class="table-responsive mt-4">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>StartTime</th>
                                    <th>EndTime</th>
                                    <th>Floor</th>
                                    <th>Room</th>
                                    <th>Table</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if bookings is not empty %}
                                    {% for booking in bookings %}
                                        <tr>
                                            <td>{{ booking.datum|date('d-m-Y') }}</td>
                                            <td>{{ booking.startTime|date('H:i') }}</td>
                                            <td>{{ booking.endTime|date('H:i') }}</td>
                                            <td>{{ booking.floor }}</td>
                                            <td>{{ booking.room }}</td>
                                            <td>{{ booking.table }}</td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">You have no bookings yet.</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-4">
                            <a href="{{ path('bookings') }}" class="btn btn-primary btn-lg">Start a new booking</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
