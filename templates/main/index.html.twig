{% extends 'base.html.twig' %}

{% block title %}{{ 'home_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .centered-container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 20px;
        }
        .text-container {
            max-width: 50%;
            text-align: left;
        }
        .image-container {
            max-width: 45%;
        }
        .image-container img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .fade-in {
            opacity: 0;
            animation: fadeIn 2s ease-in-out forwards;
        }

        .fade-in-delayed {
            opacity: 0;
            animation: fadeIn 3s ease-in-out forwards;
        }
        .btn-primary {
            display: inline-block;
            margin-top: 1rem;
            padding: 10px 20px;
            font-size: 1.25rem;
            border-radius: 8px;
        }
    </style>

{% endblock %}

{% block body %}

    <div class="centered-container">
        <div>
            <h1 class="fade-in">{{ 'welcome_message'|trans }}</h1>
            <p class="fade-in-delayed">{{ 'home_description'|trans }}</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">{{ 'login_button'|trans }}</a>
        </div>
        <div class="image-container">
            <img src="/images/flexdesk-image.jpg" alt="{{ 'image_alt_text'|trans }}">
    </div>

{% endblock %}