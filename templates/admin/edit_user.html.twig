{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_user_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'edit_user_header'|trans }}</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.firstName, 'first_name_label'|trans) }}
            {{ form_widget(form.firstName, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.lastName, 'last_name_label'|trans) }}
            {{ form_widget(form.lastName, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'email_label'|trans) }}
            {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password, 'password_label'|trans) }}
            {{ form_widget(form.password, { 'attr': { 'class': 'form-control' } }) }}
            <small class="form-text text-muted">{{ 'password_unchanged_hint'|trans }}</small>
        </div>
        <button class="btn btn-primary mt-3">{{ 'save_button'|trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
