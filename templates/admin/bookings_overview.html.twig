{% extends 'base.html.twig' %}

{% block title %}Booking Overview{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ 'booking_overview'|trans }}</h1>

        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
            <tr>
                <th>{{ 'id_label'|trans }}</th>
                <th>{{ 'user_label'|trans }}</th>
                <th>{{ 'email_label'|trans }}</th>
                <th>{{ 'date_label'|trans }}</th>
                <th>{{ 'start_time_label'|trans }}</th>
                <th>{{ 'end_time_label'|trans }}</th>
                <th>{{ 'floor_label'|trans }}</th>
                <th>{{ 'room_label'|trans }}</th>
                <th>{{ 'desk_label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.user.lastName }} {{ booking.user.firstName }}</td>
                    <td>{{ booking.user.email }}</td>
                    <td>{{ booking.date|date('Y-m-d') }}</td>
                    <td>{{ booking.startTime|date('H:i') }}</td>
                    <td>{{ booking.endTime|date('H:i') }}</td>
                    <td>{{ booking.floor }}</td>
                    <td>{{ booking.room }}</td>
                    <td>{{ booking.desk }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">{{ 'no_bookings_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}